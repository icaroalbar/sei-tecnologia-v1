{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    // "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "serverless.ts", "package.json"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}